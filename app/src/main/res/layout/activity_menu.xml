<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/effect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/backgroundstyle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:background="@mipmap/loginbackground">

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tv_DoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Doctor : Vamsi"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/rippleeffect"
                    android:onClick="onClick"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="14dp">

                    <TextView
                        android:id="@+id/tv_Appointments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/patient"
                        android:gravity="center"
                        android:text="Appointments"
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/menufont_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_Financial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:foreground="@drawable/rippleeffect"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="14dp">

                    <TextView
                        android:id="@+id/tv_Financials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/financial"
                        android:gravity="center"
                        android:text="Financial"
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/menufont_size" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_ImpCases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/rippleeffect"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="14dp">

                    <TextView
                        android:id="@+id/tv_ImpCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/important"
                        android:gravity="center"
                        android:text="Imp Cases"
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/menufont_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/rippleeffect"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="14dp">

                    <TextView
                        android:id="@+id/tv_Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/profile"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/menufont_size" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
